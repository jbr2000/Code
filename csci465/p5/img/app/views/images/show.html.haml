%h2= "Owner: " + @image.user.name

.container
  - if @image.user == current_user
    = link_to(raw("<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span>"), edit_image_path(@image), class: 'btn btn-default')
  <br/>
  <br/>

  = image_tag(root_url + "/images/" + @image.filename, alt: @image.filename, class: 'img-rounded')
  <br/>
  <br/>
- if @image.user == current_user
  = render 'tags/form'

%table{:style => 'margin: 15px 0px'}
  - @image.tags.each do |tag|
    %tr
      %td{:style => 'padding: 2px 5px'}
        =tag.value
        -if @image.user == current_user
          %td= link_to(raw("<span class=\"glyphicon glyphicon-remove\" aria-hidden=\"true\"></span>"), tag_path(tag) , method: :delete, class: 'btn btn-xs')
<br/>

